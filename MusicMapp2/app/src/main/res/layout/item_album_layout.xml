<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_album_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/album_image"
                android:src="@drawable/ic_baseline_album_24" />
            <LinearLayout
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/album_image"
                android:layout_toLeftOf="@id/downloadAlbum"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/album_name"
                    android:text="Albumname"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/artist_name"
                    android:text="Artistname"
                    android:textSize="12dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:id="@+id/downloadAlbum"
                android:src="@drawable/ic_outline_cloud_download_24"
                />
        </RelativeLayout>
        <View
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>



</FrameLayout>